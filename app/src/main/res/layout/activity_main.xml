<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Who is the 44th President of the United States?"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/card_background"
        android:textColor="@color/colorPurple2"
        android:elevation="13dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_background2"
        android:gravity="center"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textColor="@color/YellowText"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/toggle_choices_invisibility"
        android:layout_marginStart="160dp"
        android:src="@drawable/ic_eye1" />

    <ImageView
        android:id="@+id/toggle_choices_invisibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ic_eye2" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="365dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:background="@color/Answers"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textColor="@color/colorPurple2"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="365dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:background="@color/Answers"
        android:text="George H. W. Bush"
        android:textAlignment="center"
        android:textColor="@color/colorPurple2"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="365dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:background="@color/Answers"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPurple2"
        android:textSize="26sp" />
</RelativeLayout>